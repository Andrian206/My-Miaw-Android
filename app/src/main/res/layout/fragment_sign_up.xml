<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="28dp"
        android:paddingTop="32dp"
        android:paddingEnd="28dp"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/my_miaw_logo_yellow_transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/inter_family"
            android:lineSpacingExtra="4dp"
            android:text="@string/sign_up_your_account"
            android:textColor="@color/secondary_yellow"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_family"
            android:text="@string/enter_your_details_to_create_an_account"
            android:textColor="@color/another_yellow"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <EditText
            android:id="@+id/et_username_sign_up"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_white_rounded"
            android:fontFamily="@font/inter_family"
            android:hint="@string/username"
            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/another_yellow"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle" />

        <EditText
            android:id="@+id/et_email_sign_up"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_white_rounded"
            android:fontFamily="@font/inter_family"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/another_yellow"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_username_sign_up" />

        <EditText
            android:id="@+id/et_password_sign_up"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_white_rounded"
            android:fontFamily="@font/inter_family"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/another_yellow"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_email_sign_up" />

        <ImageView
            android:id="@+id/iv_toggle_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="14dp"
            android:contentDescription="@string/toggle_password"
            android:src="@drawable/ic_visibility_off"
            app:layout_constraintBottom_toBottomOf="@id/et_password_sign_up"
            app:layout_constraintEnd_toEndOf="@id/et_password_sign_up"
            app:layout_constraintTop_toTopOf="@id/et_password_sign_up" />

        <EditText
            android:id="@+id/et_confirm_password_sign_up"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_white_rounded"
            android:fontFamily="@font/inter_family"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/another_yellow"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_password_sign_up" />

        <ImageView
            android:id="@+id/iv_toggle_confirm_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="14dp"
            android:contentDescription="@string/toggle_password"
            android:src="@drawable/ic_visibility_off"
            app:layout_constraintBottom_toBottomOf="@id/et_confirm_password_sign_up"
            app:layout_constraintEnd_toEndOf="@id/et_confirm_password_sign_up"
            app:layout_constraintTop_toTopOf="@id/et_confirm_password_sign_up" />

        <Button
            android:id="@+id/btn_sign_up"
            style="@style/YellowButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_confirm_password_sign_up" />

        <Button
            android:id="@+id/btn_google_sign_up"
            style="@style/WhiteButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_sign_up" />

        <ImageView
            android:id="@+id/iv_google"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_google"
            app:layout_constraintBottom_toBottomOf="@id/btn_google_sign_up"
            app:layout_constraintStart_toStartOf="@id/btn_google_sign_up"
            app:layout_constraintEnd_toEndOf="@id/btn_google_sign_up"
            app:layout_constraintTop_toTopOf="@id/btn_google_sign_up" />

        <TextView
            android:id="@+id/tv_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_family"
            android:text="@string/already_have_an_account"
            android:textColor="@color/another_yellow"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/tv_sign_in"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_google_sign_up" />

        <TextView
            android:id="@+id/tv_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_family"
            android:layout_marginLeft="2dp"
            android:text="@string/sign_in"
            android:textColor="@color/primary_yellow"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_have_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_have_account" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>